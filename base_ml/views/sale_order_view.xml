<?xml version="1.0"?>
<odoo>
    <record id="sale_order_view_form_inherit_ml" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Mercado Libre" groups="base.group_system">
                    <group>
                        <group>
                            <field name="id_order"/>
                            <field name="id_buyer"/>
                            <field name="state_order"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
